<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/type_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="@color/orange"
    app:strokeWidth="1dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:background="#FFFFFF">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photo_market_item"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/name_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="9dp"
                android:text="My List"
                android:textColor="@color/dark_grey"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/photo_market_item"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/num_products_title_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/num_products_title"
                android:textColor="@color/light_grey"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/photo_market_item"
                app:layout_constraintTop_toBottomOf="@+id/name_list_item" />

            <TextView
                android:id="@+id/num_products_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textColor="@color/light_grey"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/num_products_title_item"
                app:layout_constraintTop_toBottomOf="@+id/name_list_item" />

            <TextView
                android:id="@+id/weight_title_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/weight_title"
                android:textColor="@color/light_grey"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/num_products_item"
                app:layout_constraintTop_toBottomOf="@+id/name_list_item" />

            <TextView
                android:id="@+id/weightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26Kg"
                android:textColor="@color/light_grey"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/weight_title_item"
                app:layout_constraintTop_toBottomOf="@+id/name_list_item" />

            <Button
                android:id="@+id/use_button"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:padding="2dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#FF9800"
                android:text="@string/use"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/photo_market_item"
                app:layout_constraintTop_toBottomOf="@+id/weight_title_item" />

            <Button
                android:id="@+id/edit_button"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:padding="2dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="@color/yellow"
                android:text="@string/edit"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/use_button"
                app:layout_constraintTop_toBottomOf="@+id/weight_title_item" />

            <Button
                android:id="@+id/delete_button"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="@color/red"
                android:padding="2dp"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/edit_button"
                app:layout_constraintTop_toBottomOf="@+id/weight_title_item"
                app:layout_constraintVertical_bias="0.52" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>